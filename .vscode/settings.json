{
  // Keep your current settings
  "editor.fontFamily": "Consolas, 'Courier New', monospace",
  "editor.fontSize": 16,
  "editor.fontLigatures": false,

  // Firebase Studioâ€“style colors
  "workbench.colorCustomizations": {
    "editor.background": "#121212", // Dark background
    "editor.foreground": "#FFFFFF",
    // "activityBar.background": "#967101", // Firebase Yellow
    // "activityBar.foreground": "#000000",
    // "statusBar.background": "#967101",
    // "statusBar.foreground": "#000000",
    // "titleBar.activeBackground": "#FFCA28",
    "titleBar.activeForeground": "#000000",
    "sideBar.background": "#0606067d",
    "sideBar.foreground": "#FFFFFF",
    // "editorCursor.foreground": "#ffbf00",
    // "terminal.foreground": "#FFCA28",
